# Kubernetes Secrets - EXAMPLE TEMPLATE
# DO NOT commit actual secrets to version control!
# 
# Usage:
# 1. Copy this file: cp secrets.yaml.example secrets.yaml
# 2. Edit secrets.yaml with your actual passwords
# 3. Apply: kubectl apply -f secrets.yaml
# 
# OR use SOPS for encryption:
# 1. Edit this file with real secrets
# 2. Encrypt: sops -e secrets.yaml > secrets.enc.yaml
# 3. Apply: sops -d secrets.enc.yaml | kubectl apply -f -

apiVersion: v1
kind: Secret
metadata:
  name: monitoring-secrets
  namespace: monitoring
type: Opaque
stringData:
  # Elasticsearch
  # Generate with: openssl rand -base64 16
  elastic-password: "CHANGE_ME_GENERATE_RANDOM_PASSWORD"
  
  # Kibana
  kibana-system-password: "CHANGE_ME_GENERATE_RANDOM_PASSWORD"
  # Must be at least 32 characters
  kibana-encryption-key: "CHANGE_ME_AT_LEAST_32_CHARACTERS_LONG_KEY_HERE"
  kibana-security-key: "CHANGE_ME_AT_LEAST_32_CHARACTERS_LONG_KEY_HERE"
  kibana-reporting-key: "CHANGE_ME_AT_LEAST_32_CHARACTERS_LONG_KEY_HERE"
  
  # Logstash
  logstash-system-password: "CHANGE_ME_GENERATE_RANDOM_PASSWORD"
  
  # Grafana
  grafana-admin-user: "admin"
  grafana-admin-password: "CHANGE_ME_GENERATE_RANDOM_PASSWORD"

---
# SECURITY NOTES:
# 
# 1. NEVER commit secrets.yaml to git (only commit secrets.yaml.example)
# 2. Use strong, randomly generated passwords (openssl rand -base64 32)
# 3. For production, use SOPS encryption or external secret management
# 4. Kubernetes Secrets are base64 encoded, NOT encrypted by default
# 5. Consider using:
#    - SOPS (recommended for this project)
#    - Sealed Secrets
#    - External Secrets Operator
#    - HashiCorp Vault
#    - Cloud provider secret managers (AWS Secrets Manager, etc.)
#
# SOPS Example:
# sops -e secrets.yaml > secrets.enc.yaml
# git add secrets.enc.yaml
# sops -d secrets.enc.yaml | kubectl apply -f -
